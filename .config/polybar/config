[colors]
background = #bb080a11
background-alt = #bb121622
foreground = #dda9aeb4
foreground-alt = #dd616a73
primary = #dd49b5b5
secondary = #ddc41a63
alert = #dd0f8182

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}

bottom = true

width = 100%
height = 24
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

overline-color = ${colors.primary}
overline-size = 2
underline-size = 1

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 1

font-0 = Iosevka:size=10;3
font-1 = FontAwesome5Free:style=Solid:size=10:antialias=true;3
font-2 = FontAwesome5Brands:style=Solid:size=11:antialias=true;3

modules-left = power prev playpause next temperature cpu 
modules-center = i3 
modules-right =  wlan updates volume battery date 

tray-position = right
tray-padding = 2
tray-transparent = true

;wm-restack = i3

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8; 
ws-icon-8 = 9;
ws-icon-9 = 0;

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = #e60053

label-focused = %name%
label-focused-background = #689eb4
label-focused-foreground = ${colors.background}
;label-focused-overline = ${colors.primary}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-foreground = #689eb4
label-unfocused-padding = 1

label-visible = %name%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.primary}
label-visible-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.secondary}
label-urgent-padding = 1

[module/xbacklight]
type = internal/xbacklight

format = <label> 
format-prefix = " "
format-prefix-foreground = ${colors.secondary}
label = %percentage%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}

label = %percentage%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected-prefix = " "
format-connected-foreground = ${colors.secondary}
format-connected = <label-connected>
label-connected = %signal%%
label-connected-foreground = ${colors.foreground}

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;ramp-signal-0 = 
;ramp-signal-1 = 
;ramp-signal-2 = 
;ramp-signal-3 = 
;ramp-signal-4 = 
;ramp-signal-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date =
date-alt = "%a %d-%m-%Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/volume]
type = internal/volume
label = %percentage:2%%

format-volume =<ramp-volume> <label-volume> 
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
format-muted-

ramp-volume-0 =  
ramp-volume-1 = 
ramp-volume-2 =  
ramp-volume-foreground = ${colors.secondary}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

label = %percentage:2%%

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.primary}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.primary}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 100

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%

label-warn-prefix = 
label-warn = %temperature%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.secondary}

[module/spotify]
type = custom/script
exec = sh ~/.config/polybar/spotify.sh
exec-if = pgrep -x spotify
interval = 1

format-prefix = " "
format-prefix-foreground = #1db954
format-padding = 0
click-left = playerctl play-pause
click-right = playerctl next
label = %output:0:25:...%

[module/prev]
type = custom/script
exec = echo " "
format-prefix = ""
format-prefix-foreground = ${colors.primary}
click-left = playerctl previous

[module/next]
type = custom/script
exec = echo " "
format-prefix = " "
format-prefix-foreground = ${colors.primary}
click-left = playerctl next

[module/playpause]
type = custom/script
exec = sh ~/.config/polybar/playpause.sh
interval = 0.01
click-left = playerctl play-pause 

[module/updates]
type = custom/script
exec = sh ~/.config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 8.8.8.8 > /dev/null"
interval = 1800

format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/power]
type = custom/script
exec = echo " "
click-left = python ~/Desktop/PowerMenu/GUItest.py
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

